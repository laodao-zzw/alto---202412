<html lang="{{@site.locale}}">
<head>

<link rel="stylesheet" href="{{asset "css/site/nav-page.css"}}">

    {{!-- This tag outputs all your advanced SEO meta, structured data, and other important settings,
    it should always be the last tag before the closing head tag --}}
    {{ghost_head}}
</head>

<body class="{{body_class}}">

    {{!-- 英文页面的中英文切换按钮 --}}
<div class="language-switcher">
    <a href="http://localhost:2368/designthinking-cn/" class="lang-cn">中文</a>
    <a href="http://localhost:2368/designthinking/" class="lang-en" aria-disabled="true">English</a>
</div>

<div class="nav-page">
<!-- 左侧导航 -->
<aside class="sidebar">
    <ul class="nav-levels">
        <li>
            Ideate
            <ul class="sub-menu">
                {{#get "posts" filter="tag:ideate" order="published_at desc" limit="all"}}
                    {{#foreach posts}}
                        <li><a href="#" data-slug="{{slug}}" data-post-id="{{id}}" class="nav-item">{{title}}</a></li>
                    {{/foreach}}
                {{/get}}
            </ul>
        </li>
        <li>
            Storytelling
            <ul class="sub-menu">
                {{#get "posts" filter="tag:storytelling" order="published_at desc" limit="all"}}
                    {{#foreach posts}}
                        <li><a href="#" data-slug="{{slug}}" data-post-id="{{id}}" class="nav-item">{{title}}</a></li>
                    {{/foreach}}
                {{/get}}
            </ul>
        </li>
        <li>
            Sythesis
            <ul class="sub-menu">
                {{#get "posts" filter="tag:sythesis" order="published_at desc" limit="all"}}
                    {{#foreach posts}}
                        <li><a href="#" data-slug="{{slug}}" data-post-id="{{id}}" class="nav-item">{{title}}</a></li>
                    {{/foreach}}
                {{/get}}
            </ul>
        </li>
        <li>
            Understand
            <ul class="sub-menu">
                {{#get "posts" filter="tag:understand" order="published_at desc" limit="all"}}
                    {{#foreach posts}}
                        <li><a href="#" data-slug="{{slug}}" data-post-id="{{id}}" class="nav-item">{{title}}</a></li>
                    {{/foreach}}
                {{/get}}
            </ul>
        </li>
    </ul>
</aside>

    <!-- 右侧内容区域 -->
<script>
    document.querySelectorAll('.nav-item').forEach(function(link) {
        link.addEventListener('click', function(e) {
            e.preventDefault();  // 阻止链接的默认跳转行为

            // 获取文章的 slug（用于加载内容）
            var slug = this.getAttribute('data-slug');

            // 使用 fetch 请求文章内容
            fetch('/' + slug + '/')  // 假设文章内容的路径为 /{slug}/
                .then(response => response.text())
                .then(data => {
                    // 将文章内容插入到右侧的 div 中
                    document.getElementById('post-content').innerHTML = data;
                })
                .catch(error => {
                    // 错误处理，如果内容加载失败
                    document.getElementById('post-content').innerHTML = '<p>Can not loading page.</p>';
                    console.error('Error loading content:', error);
                });
        });
    });
</script>

    <!-- 右侧内容区域 -->
    <div class="content-area">

        <div id="post-content">
        <!-- Basic top page -->
        <p><p><p><p><p>
        <H2>.</H2></p>
        <H2>.</H2></p>
        <H2>.</H2></p>
        <H2>.</H2></p>
        <H2>.</H2></p>
        <H2>Please Select from left navigation for guide.</H2></p>
        </div>
    </div>
</div>

